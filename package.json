{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "MPL-2.0 License",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lib:rebuild": "node-gyp rebuild",
    "lib:build": "node-gyp configure && node-gyp build"
  },
  "bugs": {
    "url": "https://github.com/picass-co/issues",
    "email": "support@picass.co"
  },
  "dependencies": {
    "@firebase/storage": "^0.3.42",
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-fastify": "^7.4.2",
    "@nestjs/terminus": "^7.0.1",
    "@nestjs/typeorm": "^7.1.0",
    "@webundsoehne/nest-fastify-file-upload": "^1.0.0",
    "argon2": "^0.27.0",
    "bindings": "^1.5.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "fastify-helmet": "^5.0.1",
    "fastify-multer": "^2.0.2",
    "firebase": "^7.19.1",
    "got": "^11.5.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.0",
    "ms": "^2.1.2",
    "nestjs-rate-limit": "^1.0.6",
    "node-addon-api": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "sharp": "^0.26.0",
    "typeorm": "^0.2.25",
    "uuid": "^8.3.0",
    "ws": "^7.3.1",
    "xhr2": "^0.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.4.3",
    "@types/argon2": "^0.15.0",
    "@types/bindings": "^1.3.0",
    "@types/express": "^4.17.3",
    "@types/jest": "25.2.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/memory-cache": "^0.2.1",
    "@types/mongoose": "^5.7.36",
    "@types/morgan": "^1.9.1",
    "@types/ms": "^0.7.31",
    "@types/node": "^13.9.1",
    "@types/sharp": "^0.25.1",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "eslint": "7.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "fastify": "^3.3.0",
    "i": "^0.3.6",
    "jest": "26.0.1",
    "memory-cache": "^0.2.0",
    "node-gyp": "^7.1.0",
    "npm": "^6.14.8",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "26.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@app/snowflake/(.*)": "<rootDir>/libs/Snowflake/src/$1",
      "@app/snowflake": "<rootDir>/libs/Snowflake/src"
    }
  }
}
